<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bookings.controllers.FormController">
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <TextField fx:id="roomIdTF" promptText="roomID" />
            <TextField fx:id="guestIdTF" promptText="guestID" />
         <DatePicker fx:id="CheckInDP" promptText="checkin" />
         <DatePicker fx:id="checkOutDP" promptText="checkout" />
            <ChoiceBox fx:id="statusCB" prefWidth="150.0">
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="2 minutes"/>
                    <String fx:value="5 minutes"/>
                    <String fx:value="15 minutes"/>
                </FXCollections>
            </ChoiceBox>
         <CheckBox fx:id="prepaymentCB" mnemonicParsing="false" text="prepayment offer" />
         <CheckBox fx:id="phoneChargeCB" mnemonicParsing="false" text="booking from phone(extra fee)" />
         <ChoiceBox fx:id="methodCB" prefWidth="150.0" />
         <TextField fx:id="cardTF" promptText="card Number" />
         <TextField fx:id="vccTF" promptText="card VCC" />
         <TextField fx:id="priceTF" promptText="price" />
         <Button mnemonicParsing="false" onAction="#onSubmitClicked" text="Submit" />
        </VBox>
    </center>
</BorderPane>
