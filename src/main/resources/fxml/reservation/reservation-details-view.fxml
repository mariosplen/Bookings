    <VBox alignment="CENTER" prefHeight="213.0" prefWidth="227.0"
          style="-fx-background-color: #C6B3EF; -fx-background-radius: 3;" AnchorPane.leftAnchor="15.0"
          AnchorPane.topAnchor="25.0">
        <Text fx:id="roomIDText" layoutX="53.0" layoutY="45.0" strokeType="OUTSIDE" strokeWidth="0.0"
              style="-fx-font-size: 24; -fx-font-weight: bold;" text="room: "/>
        <Text fx:id="categoryText" strokeType="OUTSIDE" strokeWidth="0.0"
              style="-fx-font-size: 24; -fx-font-weight: bold;" text="Φαρδύκλινο"/>
